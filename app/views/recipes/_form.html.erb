<%= render 'shared/errors', obj: @recipe %>

<div class="row">
	<div class="well col-md-8 col-md-offset-2">

		<%= form_for( @recipe, html: { multiport: true } ) do |f| %>

			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class:"form-control" %>		
			</div>
			<div class="form-group">
				<%= f.label :summary %>
				<%= f.text_field :summary, class: 'form-control' %>				
			</div>
			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, rows: 10,  class: 'form-control' %>
			</div>

			<div class="form-group">
				<span class="picture">
					<%= f.file_field :picture, accept: 'image/jpeg, image/gif, image/png'%>
				</span>
			</div>

			<%= f.submit( @recipe.new_record? ? 'Create Recipe' : 'Edit Recipe', class: "btn btn-success btn-block") %>

		<% end %>
		
	</div>

	<script type="text/javascript">

		$('#recipe_picture').bind('change', function(){
			size_in_megabytes = this.files[0].size/1024/1024;
			if(size_in_megabytes > 5){
				alert('Maximum file size is 5MB. Please upload a smaller file');
			}
		});

	</script>

</div>